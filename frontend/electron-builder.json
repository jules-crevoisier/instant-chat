{
  "appId": "com.instantchat.app",
  "productName": "Instant Chat",
  "directories": {
    "output": "dist",
    "buildResources": "build"
  },
  "files": [
    "out/**/*",
    "electron/**/*",
    "package.json",
    "!**/node_modules/@types/**/*",
    "!**/node_modules/typescript/**/*",
    "!**/node_modules/eslint/**/*",
    "!**/node_modules/@tailwindcss/**/*",
    "!**/node_modules/tailwindcss/**/*",
    "!**/node_modules/tw-animate-css/**/*",
    "!**/node_modules/.cache/**/*",
    "!**/node_modules/**/*.{md,ts,tsx,map}",
    "!**/node_modules/**/test/**/*",
    "!**/node_modules/**/tests/**/*",
    "!**/node_modules/**/__tests__/**/*",
    "!**/node_modules/**/__mocks__/**/*"
  ],
  "extraFiles": [],
  "win": {
    "target": [
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "build/icon.ico",
    "artifactName": "${productName}-${version}-portable.${ext}",
    "publisherName": "Instant Chat"
  },
  "portable": {
    "artifactName": "${productName}-${version}-portable.${ext}"
  },
  "compression": "store",
  "asar": true,
  "asarUnpack": [],
  "nodeGypRebuild": false,
  "buildDependenciesFromSource": false,
  "removePackageScripts": true
}

